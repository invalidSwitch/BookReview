<div class="col-md-6 col-md-offset-3">

  <div class="edit-review-form">

		<% if @review.user_id == current_user.id %>

      <h1>Edit review</h1>

      <%= simple_form_for([@book, @review]) do |f| %>
        <div id="rating-form">
          <label>Rating</label>
        </div>
        <%= f.input :comment, input_html: { maxlength: 140 }, hint: 'Maximum 140 characters' %>
        <%= f.button :submit, :class => "btn-custom2" %>
      <% end %>

      <% else %>

        <h4>You're not allowed to edit this review</h4>

    <% end %>

  </div>

</div>

<script>
  $('#rating-form').raty({
    path: '/assets/'
    scoreName: 'review[rating]'
  });
</script>
