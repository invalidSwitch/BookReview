<%= simple_form_for([@book, @book.reviews.build]) do |f| %>

  <div id="rating-form">
    <label>Rating</label>
  </div>

  <%= f.input :comment, input_html: { maxlength: 140 }, hint: 'Maximum 140 characters' %>
  <%= f.button :submit, :class => "btn-custom2" %>

<% end %>

<script>
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>
